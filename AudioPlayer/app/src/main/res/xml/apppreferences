<?xml version="1.0" encoding="utf-8"?>
<!-- XML which describes the preferences in settings activity -->
<PreferenceScreen xmlns:android= "http://schemas.android.com/apk/res/android">

    <!-- list preferences for colors-->
    <ListPreference
        android:key="pref_color"
        android:entries="@array/colors"
        android:summary="Set the background color of UI"
        android:defaultValue="#FF3FB9E6"
        android:entryValues="@array/colors_values"
        android:title="Background" />

    <CheckBoxPreference
        android:key="pref_background"
        android:title="Play background"
        android:summary="Tick or untick to turn on or off notification"
        android:defaultValue="false" />

    <EditTextPreference
        android:key="pref_savepath"
        android:title="Server location"
        android:summary="Set default server path"
        />

</PreferenceScreen>